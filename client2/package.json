{
  "name": "battlecode-client",
  "version": "2023.0.0",
  "description": "Battlecode client",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "fix-schema": "(cd ../schema && npm i && cd ../client2 && rimraf node_modules/battlecode-schema && npm i)",
    "watch": "set NODE_ENV=development && webpack serve --config webpack.config.js --mode development --env dev",
    "build": "set NODE_ENV=production && webpack build --config webpack.config.js --mode production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/battlecode/battlecode23.git"
  },
  "author": "Teh Devs",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/battlecode/battlecode23/issues"
  },
  "homepage": "https://github.com/battlecode/battlecode23#readme",
  "dependencies": {
    "@headlessui/react": "^1.7.14",
    "assert": "^2.0.0",
    "battlecode-schema": "file:../schema",
    "electron": "^25.2.0",
    "pako": "^2.1.0",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-custom-scrollbars-2": "^4.5.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "react-router-dom": "^6.13.0",
    "recharts": "^2.6.2"
  },
  "devDependencies": {
    "@types/pako": "^2.0.0",
    "@types/react": "^18.2.5",
    "@types/react-dom": "^18.2.3",
    "css-loader": "^6.7.3",
    "html-webpack-plugin": "^5.5.1",
    "postcss-loader": "^7.3.0",
    "style-loader": "^3.3.2",
    "tailwindcss": "^3.3.2",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.82.0",
    "webpack-cli": "^5.0.2",
    "webpack-dev-server": "^4.13.3"
  },

  "//": "ELECTRON STUFF (copied from old client) (this is a comment)",
  "main": "electron-main.js",
  "build": {
    "appId": "org.battlecode.client",
    "productName": "Battlecode Client",
    "compression": "maximum",
    "files": [
      "out/**/*",
      "index.html",
      "electron-main.js",
      "node_modules/electron"
    ],
    "directories": {
      "output": "../dist"
    },
    "fileAssociations": [
      {
        "ext": "bc24",
        "name": "BC24",
        "description": "Battlecode Match 2024",
        "role": "Viewer",
        "icon": "build/icon"
      },
      {
        "ext": "map24",
        "name": "MAP24",
        "description": "Battlecode Map 2024",
        "role": "Viewer",
        "icon": "build/icon"
      }
    ],
    "mac": {
      "target": [
        "dir"
      ],
      "category": "public.app-category.games",
      "hardenedRuntime": "true"
    },
    "win": {
      "target": [
        "dir"
      ]
    },
    "linux": {
      "target": [
        "dir"
      ]
    }
  }
}
